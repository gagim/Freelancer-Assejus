<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/textura"
    tools:context="com.example.henrique.frila.br.com.controle.activitys.TelaRegistro"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="25dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/textura"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <Button
                android:id="@+id/button2"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/editSenhaRegistro"
                android:layout_alignStart="@+id/editSenhaRegistro"
                android:layout_below="@+id/editSenhaRegistro"
                android:layout_marginTop="17dp"
                android:background="@drawable/button"
                android:onClick="Salvar"
                android:text="Salvar"
                tools:ignore="OnClick" />

            <Button
                android:id="@+id/button3"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/button2"
                android:layout_alignBottom="@+id/button2"
                android:layout_alignEnd="@+id/editSenhaRegistro"
                android:layout_alignRight="@+id/editSenhaRegistro"
                android:background="@drawable/button"
                android:onClick="Cancelar"
                android:text="Cancelar"
                tools:ignore="OnClick" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView2"
                android:layout_marginTop="37dp"
                android:layout_toLeftOf="@+id/textView2"
                android:layout_toStartOf="@+id/textView2"
                android:text="CPF:"
                android:textColor="@color/branco"
                android:textSize="@dimen/padraoLogin" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="22dp"
                android:text="Tela Registro"
                android:textColor="@color/branco"
                android:textSize="@dimen/padraoGrandeLogin" />

            <EditText
                android:id="@+id/editCPFRegistro"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_alignLeft="@+id/textView"
                android:layout_alignStart="@+id/textView"
                android:layout_below="@+id/textView"
                android:background="@drawable/edit"
                android:ems="10"
                android:inputType="number"
                android:textAlignment="center"
                android:textColor="@color/branco"
                android:textSize="@dimen/padraoLogin" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/editCPFRegistro"
                android:layout_alignStart="@+id/editCPFRegistro"
                android:layout_below="@+id/editCPFRegistro"
                android:text="Email:"
                android:textColor="@color/branco"
                android:textSize="@dimen/padraoLogin" />

            <EditText
                android:id="@+id/editEmailRegistro"
                android:layout_width="300dp"
                android:layout_height="@dimen/layout"
                android:layout_alignLeft="@+id/textView6"
                android:layout_alignStart="@+id/textView6"
                android:layout_below="@+id/textView6"
                android:background="@drawable/edit"
                android:ems="10"
                android:inputType="textEmailAddress"
                android:textAlignment="center"
                android:textColor="@color/branco"
                android:textSize="@dimen/padraoLogin" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/editEmailRegistro"
                android:layout_alignStart="@+id/editEmailRegistro"
                android:layout_below="@+id/editEmailRegistro"
                android:text="Nome:"
                android:textColor="@color/branco"
                android:textSize="@dimen/padraoLogin" />

            <EditText
                android:id="@+id/editNomeRegistro"
                android:layout_width="300dp"
                android:layout_height="@dimen/layout"
                android:layout_alignLeft="@+id/textView8"
                android:layout_alignStart="@+id/textView8"
                android:layout_below="@+id/textView8"
                android:background="@drawable/edit"
                android:ems="10"
                android:inputType="textPersonName"
                android:textAlignment="center"
                android:textColor="@color/branco"
                android:textSize="@dimen/padraoLogin" />

            <TextView
                android:id="@+id/textView17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/editNomeRegistro"
                android:layout_alignStart="@+id/editNomeRegistro"
                android:layout_below="@+id/editNomeRegistro"
                android:text="Senha:"
                android:textAlignment="center"
                android:textColor="@color/branco"
                android:textSize="@dimen/padraoLogin" />

            <EditText
                android:id="@+id/editSenhaRegistro"
                android:layout_width="300dp"
                android:layout_height="@dimen/layout"
                android:layout_alignLeft="@+id/textView17"
                android:layout_alignStart="@+id/textView17"
                android:layout_below="@+id/textView17"
                android:background="@drawable/edit"
                android:ems="10"
                android:inputType="textPassword"
                android:textAlignment="center"
                android:textColor="@color/branco"
                android:textSize="@dimen/padraoLogin" />

        </RelativeLayout>
    </ScrollView>


</RelativeLayout>